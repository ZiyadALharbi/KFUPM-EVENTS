{% extends "layout.njk" %}

{% block content %}
<div class="container mt-2">
    <h1>{{ event.title }}</h1>
    <div class="row">
        <div class="col-8">
            <img class="img-fluid" id="Event-page-image" src="../{{ event.photo }}" alt="photo" width="1293" height="727" />
        </div>
        <div class="col-4">
            <div class="card " id="info-card">
                <div class="card-body">
                    <div class="event-info">
                        <img class="icon" src="../assets/icons/user.svg" />
                        <span class="icon-name">{{ event.organizer.username }}</span>
                    </div>
                    <div class="event-info">
                        <img class="icon" src="../assets/icons/users-group.svg" />
                        <span class="icon-name">Club</span>
                    </div>
                    <div class="event-info">
                        <img class="icon" src="../assets/icons/calendar-month.svg" />
                        <span class="icon-name">{{ event.date }}</span>
                    </div>
                    <div class="event-info">
                        <img class="icon" src="../assets/icons/map.svg" />
                        <span class="icon-name">{{ event.location }}</span>
                    </div>
                    <div class="mx-5 text-center">
                        <button class="btn btn-primary btn-success" id="apply-button" data-bs-toggle="modal" data-bs-target="#applyModal">Apply</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Structure -->
        <div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="applyModalLabel">Apply for Event</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="applyForm">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-success">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.getElementById('applyForm').addEventListener('submit', function(event) {
                event.preventDefault();
                // You can add your form submission logic here
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                console.log('Form submitted:', name, email);

                // Optionally, you can close the modal after form submission
                var applyModal = new bootstrap.Modal(document.getElementById('applyModal'));
                applyModal.hide();
            });
        </script>

        <div>
            <a href="#" class="tag">Course</a>
            <a href="#" class="tag">Java</a>
            <a href="#" class="tag">Data Structure</a>
        </div>
        <div class="container">
            <div id="soso" class="card">
                <div class="card-body">
                    <h2 class="card-title">About</h2>
                    <p class="card-text" id="description">
                        {{ event.description }}
                    </p>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="container mt-4 mb-5" id="form-container">
                <h3 class="mt-2" id="form-title">Form</h3>
                <div class="container mt-1 mb-4" id="questions-container">
                    <form>
                        <!-- Question 1 -->
                        <div class="container m-1 mt-2" id="questions">
                            <div class="form-group mb-3">
                                <label for="howHeard" class="question">1. How did you hear about this event? *</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="howHeard" id="socialMedia" value="socialMedia" />
                                    <label class="form-check-label" for="socialMedia">Social media</label><br />
                                    <input class="form-check-input" type="radio" name="howHeard" id="email" value="email" />
                                    <label class="form-check-label" for="email">Email</label><br />
                                    <input class="form-check-input" type="radio" name="howHeard" id="friends" value="friends" />
                                    <label class="form-check-label" for="friends">Friends</label><br />
                                    <input class="form-check-input" type="radio" name="howHeard" id="printedPoster" value="printedPoster" />
                                    <label class="form-check-label" for="printedPoster">Printed Poster</label><br />
                                    <input class="form-check-input" type="radio" name="howHeard" id="other" value="other" />
                                    <label class="form-check-label" for="other">Other</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="interestReason" class="question">2. Why are you interested in joining the bootcamp? *</label>
                                <textarea class="form-control mt-2" id="interestReason" rows="3"></textarea>
                            </div>

                        </div>


                        <div class="text-center">
                            <button type="submit" class="custom-submit-btn submit-button">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
